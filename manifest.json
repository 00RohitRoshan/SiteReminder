{
  "manifest_version": 3,
  "name": "Site Visit Marker & Reminder",
  "description": "Marks visited sites, shows last visit and reminders with a floating tooltip.",
  "version": "1.0",
  "permissions": ["storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
